{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "nodenext",

    "types": ["node"],

    "sourceMap": true,
    "declaration": false,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "api/**/*.ts"]
}
